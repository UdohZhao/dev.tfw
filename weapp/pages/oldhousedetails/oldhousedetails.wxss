/* oldhousedetails.wxss */
.house_swiper image{
  width: 100%;
  height: 100%;
}
.wx-swiper-dot-active{
  background-color: #00ce3c;
}
.titleword{
  background-color: #fff;
  padding: 10px 15px;
}
.title_top{
  margin-bottom: 5px;
}
.title_bottom{
  display: flex;
  flex-direction: row;
}
.bottom_list{
  font-size: 12px;
  background-color: #f3f8fc;
  border-radius: 4px;
  padding: 2px 4px;
  color: #00ce3c;
  margin-right: 3px;
  margin-bottom: 3px;
}
.sale_msg{
  background-color: #fff;
  padding: 20px 0;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  flex-direction: row;
}
.sale_list{
  width: 33.3333%;
  border-right: 1px solid #f8f8f8;
}
.sale_list:nth-last-child(1){
  border-right: none;
}
.sale_number,.sale_type{
  text-align: center;
}
.sale_type{
  font-size: 14px;
}
.sale_number{
  color: #fd811f;
  font-weight: bold;
}
.more_content{
  background-color: #fff;
  padding: 10px 15px;
  padding-bottom: 0;
}
.more_list{
  font-size: 14px;
  color: #aaa;
  margin-bottom: 5px;
}
.more_list:nth-last-child(1){
  margin-bottom: 0;
}
.more_list text{
  color: #000;
  margin-right: 5px;
}
.district .weui-cells::after{
  border-bottom: none;
}
.district .weui-cells::before{
  border-top: none;
}
.district .weui-cells{
  font-size: 14px;
  color: #aaa;
}
.district .weui-cell__bd text{
  color: #00ce3c;
}
.consultant .weui-cells::before, .huxing .weui-cells::before{
  border-top: none;
}
.list_title,.list_style{
  font-size: 12px;
}
.list_style{
  color: #8a8a8a;
}
.profile{
  margin-top: 10px;
  background-color: #fff;
}
.profile_top{
  padding: 10px 0;
  border-bottom: 1px solid #f8f8f8;
}
.profile_top view{
  padding-left: 15px;
  line-height: 24px;
  border-left: 3px solid #00ce3c;
}
.profile .weui-panel{
  margin-top: 0;
}
.profile .weui-panel:before{
  border-top: none;
}
.profile .weui-panel:after{
  border-bottom: none;
}
.profile .weui-media-box__hd_in-appmsg{
  border-radius: 100%;
  overflow: hidden;
}
.phone_img{
  width: 20px;
  height: 17px;
}
.selling_point{
  padding: 0 15px;
  padding-bottom: 10px;
  margin-bottom: 10px;
}
.point_title{
  margin-bottom: 10px;
}
.point_content{
  font-size: 14px;
  color: #aaa;
  margin-bottom: 5px;
}