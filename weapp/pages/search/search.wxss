.nav-header{
  position: fixed;
  top: 0;
  left: 0;
  background-color: #ededed;
  padding-left: 90px;
  padding-right: 45px;
  height: 48px;
  padding-top: 6px;
  box-sizing: border-box;
  width: 100%;
}
.search{
  position: relative;
  width:100%;
}
.search .search-input{
  background-color: #fff;
  height: 35px;
  border-radius: 4px;
  padding: 0;
  padding-left: 5px;
  padding-right: 30px;
  font-size: 14px;
  width: 100%;
  box-sizing: border-box;

}
.clearInput{
  background-color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  margin-left: 5px;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 999;
  width: 30px;
  text-align: center;
  line-height: 30px;
}
.clearInput::after{
  content: normal;
}
.search_right{
  line-height: 48px;
  position: absolute;
  top: 0;
  right: 10px;
  font-size: 14px;
}
.history{
