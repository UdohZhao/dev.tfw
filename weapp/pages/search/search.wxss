/* search.wxss */
page{
  position: relative;
}
.phone_one{
    display: flex; 
    position: relative;
    justify-content: space-between;
    background-color:transparent;
    height:60rpx;
    width: 150rpx;
}
.person_box{
    position: relative;
}
.phone_select{
    margin-top:0;
    z-index: 100;
    position: absolute; /*小程序中z-index和absolute需要同时存在，元素才能脱离文档。*/
}
.select_one{
    text-align: center;
    background-color:rgba(0, 0, 0,.5);
    width:180rpx;   /*脱离文档后元素width不能再用百分比。*/
    height:60rpx;
    line-height:60rpx;
    border-bottom:1rpx solid #fff;
    font-size: 14px;
    color: #fff;
}
.personal_image{
    z-index: 100;
    position: absolute;
    right:0;
    width: 34rpx;
    height: 20rpx;
    margin-top:20rpx;
    transition: All 0.4s ease;  
    -webkit-transition: All 0.4s ease;
}
.rotateRight{
    transform: rotate(180deg); /*180°旋转图片。*/
}
.clear{
  clear: both;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.mysearch{
  position: relative;
  background-color: #efeff4;
  padding-bottom:0;
}
.mysearch .weui-search-bar{
  padding-left: 90px;
  border-bottom: none;
}
.mysearch .phone_one{
  position: fixed;
  top: 13px;
  left: 0;
  z-index: 999;
  padding-left: 10px;
  width: auto;
  height: 30px;
  font-size: 14px;
  color: #bbb;
}
.phone_select{
  top: 40px;
}
.personal_image{
  top: -4px;
  right: -22px;
  width: 24rpx;
  height: 26rpx;
}
.weui-icon-clear{
  font-size: 12px;
  line-height: 28px;
  padding: 0;
  padding-right: 3px;
}


.nav-header{
  position:fixed;
